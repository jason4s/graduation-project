<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/RelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="220dp" 
        android:background="@drawable/use_bg">

        <com.example.tool.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/user_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:contentDescription="@string/app_name" />
        
        <TextView
            android:id="@+id/user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/user_123"
            android:layout_below="@+id/user_image"
            android:gravity="center_horizontal"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

        <LinearLayout
            android:id="@+id/user_123"
            android:layout_width="match_parent"
            android:layout_height="60dp" 
            android:layout_alignParentBottom="true">

            <Button
                android:id="@+id/user1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/user1" 
                android:textColor="@android:color/white"
                android:background="@android:color/transparent"/>
            
            <View
		        android:layout_width="1dp"
		        android:layout_height="40dp"
		        android:background="@android:color/white" 
		        android:layout_gravity="center_vertical"/>

            <Button
                android:id="@+id/user2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/user2"
                android:textColor="@android:color/white" 
                android:background="@android:color/transparent"/>
            
            <View
		        android:layout_width="1dp"
		        android:layout_height="40dp"
		        android:background="@android:color/white" 
		        android:layout_gravity="center_vertical"/>

            <Button
                android:id="@+id/user3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:text="@string/user3"
                android:textColor="@android:color/white"/>

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" 
        android:layout_below="@+id/RelativeLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_above="@+id/textView"
            android:baselineAligned="false">

            <RelativeLayout
                android:id="@+id/u1"
                android:layout_width="0dp"
                android:layout_height="match_parent"  
                android:layout_weight="1"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/user_mine"
                    android:contentDescription="@string/app_name"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imageView1"
                    android:layout_marginTop="10dp"
                    android:gravity="center_horizontal"
                    android:text="@string/user_mine"
                    android:textSize="16sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/u2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" 
                android:gravity="center_vertical">
                
                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/user_history"
                    android:contentDescription="@string/app_name"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imageView2"
                    android:layout_marginTop="10dp"
                    android:gravity="center_horizontal"
                    android:text="@string/user_history"
                    android:textSize="16sp" />
                
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/u3"
                android:layout_width="0dp"
                android:layout_height="match_parent" 
                android:layout_weight="1"
                android:gravity="center_vertical">
                
                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/user_remind"
                    android:contentDescription="@string/app_name"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imageView3"
                    android:layout_marginTop="10dp"
                    android:gravity="center_horizontal"
                    android:text="@string/user_remind"
                    android:textSize="16sp" />
                
            </RelativeLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="" 
            android:layout_centerVertical="true"/>

        <LinearLayout
            android:layout_below="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:baselineAligned="false">
            
            <RelativeLayout
                android:id="@+id/u4"
                android:layout_width="0dp"
                android:layout_height="match_parent"  
                android:layout_weight="1"
                android:gravity="center_vertical">
                
                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/user_update"
                    android:contentDescription="@string/app_name"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imageView4"
                    android:layout_marginTop="10dp"
                    android:gravity="center_horizontal"
                    android:text="@string/user_update"
                    android:textSize="16sp" />
                
            </RelativeLayout>
            
            <RelativeLayout
                android:id="@+id/u5"
                android:layout_width="0dp"
                android:layout_height="match_parent"  
                android:layout_weight="1"
                android:gravity="center_vertical">
                
                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/user_notice"
                    android:contentDescription="@string/app_name"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imageView5"
                    android:layout_marginTop="10dp"
                    android:gravity="center_horizontal"
                    android:text="@string/user_notice"
                    android:textSize="16sp" />
                
            </RelativeLayout>
            
            <RelativeLayout
                android:id="@+id/u6"
                android:layout_width="0dp"
                android:layout_height="match_parent"  
                android:layout_weight="1"
                android:gravity="center_vertical">
                
                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/user_setting"
                    android:contentDescription="@string/app_name"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imageView6"
                    android:layout_marginTop="10dp"
                    android:gravity="center_horizontal"
                    android:text="@string/user_setting"
                    android:textSize="16sp" />
                
            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>