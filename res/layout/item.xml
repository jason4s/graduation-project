<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F0F4"
    android:orientation="horizontal" >

    <RelativeLayout
        android:id="@+id/item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_margin="5dp"
        android:layout_toLeftOf="@+id/see_message"
        android:background="@android:color/white"
        android:minHeight="80dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/order_tv"
            android:gravity="left|top"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:text=""
            android:textSize="16sp" />

        <TextView
            android:id="@+id/reply_tv"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/tv"
            android:gravity="left|bottom"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:text=""
            android:textColor="#0000CD"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/reply_user_id_tv"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/reply_tv"
            android:gravity="left|bottom"
            android:paddingBottom="5dp"
            android:text=""
            android:textColor="#FF00FF"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/order_tv"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:gravity="right|top"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:text=""
            android:textColor="#FF00FF"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/order"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/order_tv"
            android:text="" />

        <TextView
            android:id="@+id/type"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/order"
            android:text="" />
        
        <TextView
            android:id="@+id/message_order"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/type"
            android:text="" />

        <TextView
            android:id="@+id/id_tv"
            android:layout_width="140dp"
            android:layout_height="25dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:gravity="right|bottom"
            android:paddingBottom="5dp"
            android:paddingRight="10dp"
            android:text=""
            android:textColor="#00CDCD"
            android:textSize="12sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/see_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/item"
        android:layout_toLeftOf="@+id/see_message_2"
        android:layout_alignParentTop="true"
        android:text=""
        android:textSize="16sp" 
        android:background="#FF7F00"
        android:gravity="center"
        android:layout_marginTop="5dp"/>
    
    <TextView
        android:id="@+id/see_message_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/item"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text=""
        android:textSize="16sp" 
        android:background="#1E90FF"
        android:gravity="center"
        android:layout_marginTop="5dp"/>

</RelativeLayout>