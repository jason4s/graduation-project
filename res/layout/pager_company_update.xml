<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F0F4" >

    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="#FF7F00" >

        <Button
            android:id="@+id/left"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:background="@drawable/ic_back"
            android:text=""
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <Button
            android:id="@+id/right"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:text="@string/finish"
            android:textColor="@android:color/white"
            android:textSize="18sp" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/top" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/company_name"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:gravity="right|center_vertical"
                android:text="@string/c0"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/company_name_et"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/company_name"
                android:hint=""
                android:maxLength="15"
                android:text="" >

                <requestFocus />
            </EditText>

            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="60dp"
                android:gravity="center_vertical"
                android:text="@string/information"
                android:textColor="#FF7F00"
                android:textSize="20sp" />

            <View
                android:id="@+id/l1"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/textView1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#FF7F00" />

            <RelativeLayout
                android:id="@+id/relativeLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/l1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" >

                <TextView
                    android:id="@+id/industries"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignRight="@+id/nature"
                    android:layout_marginTop="10dp"
                    android:gravity="right|center_vertical"
                    android:text="@string/c1"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/industries_et"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/industries"
                    android:hint=""
                    android:maxLength="15"
                    android:text="" />

                <TextView
                    android:id="@+id/nature"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/industries"
                    android:layout_marginTop="10dp"
                    android:gravity="right|center_vertical"
                    android:text="@string/c2"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/nature_et"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_alignLeft="@+id/industries_et"
                    android:layout_below="@+id/industries"
                    android:hint=""
                    android:maxLength="15"
                    android:text="" />

                <TextView
                    android:id="@+id/trimmed"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/nature"
                    android:layout_marginTop="10dp"
                    android:gravity="right|center_vertical"
                    android:text="@string/c3"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/trimmed_et"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_alignLeft="@+id/nature_et"
                    android:layout_below="@+id/nature"
                    android:hint=""
                    android:maxLength="15"
                    android:text="" />

                <TextView
                    android:id="@+id/address"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/trimmed"
                    android:layout_marginTop="10dp"
                    android:gravity="right|center_vertical"
                    android:text="@string/c4"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/address_et"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_alignLeft="@+id/trimmed_et"
                    android:layout_below="@+id/trimmed"
                    android:hint=""
                    android:maxLength="15"
                    android:text="" />

                <TextView
                    android:id="@+id/introduction"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/address"
                    android:layout_marginTop="10dp"
                    android:gravity="right|center_vertical"
                    android:text="@string/c6"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/introduction_et"
                    android:layout_width="match_parent"
                    android:layout_height="260dp"
                    android:layout_alignLeft="@+id/address_et"
                    android:layout_below="@+id/address"
                    android:gravity="left|top"
                    android:layout_marginTop="10dp"
                    android:hint=""
                    android:maxLength="100"
                    android:text="" />
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>